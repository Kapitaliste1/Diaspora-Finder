<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="@dimen/dp16"
    android:paddingRight="@dimen/dp16"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/green"
    tools:context=".activite.RegisterActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical"
            android:layout_marginBottom="20sp"
            android:paddingBottom="@dimen/dp4">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="70sp"
                android:src="@drawable/ic_app"
                />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="40sp"
                android:text="Diaspora Finder"
                android:gravity="center"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:textStyle="bold"

                />
        </LinearLayout>


        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp4"
            android:layout_marginBottom="@dimen/dp4">
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp48"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp48"
                    android:text="@string/Type_field_prompt"
                    android:paddingRight="@dimen/dp4"
                    android:textSize="@dimen/text_medium"
                    android:gravity="center_vertical|right"
                    android:layout_marginRight="@dimen/dp4" />


                <Spinner
                    android:layout_width="@dimen/dp149"
                    android:layout_height="@dimen/dp48"
                    android:id="@+id/TypeField"
                    android:layout_marginLeft="@dimen/dp4"
                    android:gravity="center_vertical"

                    />;


            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp48"
                android:layout_marginTop="10sp"

                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp48"
                    android:text="@string/Nationality_field_prompt"
                    android:paddingRight="@dimen/dp4"
                    android:textSize="@dimen/text_medium"
                    android:gravity="center_vertical|right"
                    android:layout_marginRight="@dimen/dp4" />


                <Spinner
                    android:layout_width="@dimen/dp149"
                    android:layout_height="@dimen/dp48"
                    android:id="@+id/NationalityField"
                    android:layout_marginLeft="@dimen/dp4"
                    android:gravity="center_vertical"

                    />;


            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp48"
                android:layout_marginTop="10sp"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp48"
                    android:text="@string/email_field_prompt"
                    android:paddingRight="@dimen/dp4"
                    android:textSize="@dimen/text_medium"
                    android:gravity="center_vertical|right"
                    android:layout_marginRight="@dimen/dp4" />

                <EditText
                     android:layout_width="@dimen/dp144"
                    android:layout_height="@dimen/dp48"
                    android:id="@+id/emailField"
                    android:textSize="@dimen/text_medium"
                    android:layout_marginLeft="@dimen/dp4"
                    android:gravity="center_vertical"
                    android:background="@color/common_google_signin_btn_text_dark_default"
                    android:inputType="text" />

            </TableRow>



            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp48"
                android:gravity="center_horizontal"
                android:layout_marginTop="10sp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp48"
                    android:text="@string/name_field_prompt"
                    android:paddingRight="@dimen/dp4"
                    android:textSize="@dimen/text_medium"
                    android:gravity="center_vertical|right"
                    android:layout_marginRight="@dimen/dp4" />

                <EditText

                    android:layout_width="@dimen/dp144"
                    android:layout_height="@dimen/dp48"
                    android:id="@+id/nameField"
                    android:textSize="@dimen/text_medium"
                    android:layout_marginLeft="@dimen/dp4"
                    android:gravity="center_vertical"
                    android:background="@color/common_google_signin_btn_text_dark_default"
                    android:inputType="text" />

            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp48"
                android:gravity="center_horizontal"
                android:layout_marginTop="10sp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp48"
                    android:text="@string/password_field_prompt"
                    android:paddingRight="@dimen/dp4"
                    android:textSize="@dimen/text_medium"
                    android:gravity="center_vertical|right"
                    android:layout_marginRight="@dimen/dp4" />

                <EditText

                    android:layout_width="@dimen/dp144"
                    android:layout_height="@dimen/dp48"
                    android:id="@+id/passwordField"
                    android:textSize="@dimen/text_medium"
                    android:layout_marginLeft="@dimen/dp4"
                    android:gravity="center_vertical"

                    android:password="true"
                    android:background="@color/common_google_signin_btn_text_dark_default"
                    android:inputType="text" />

            </TableRow>

        </TableLayout>

        <Button
            android:layout_width="@dimen/dp144"
            android:layout_height="@dimen/dp48"
            android:text="@string/register_text"
            android:background="@drawable/transparent_button_selector"

            android:id="@+id/registerButton"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10sp"
             android:textSize="@dimen/text_medium"
            android:height="@dimen/dp40"/>
    </LinearLayout>
</ScrollView>
