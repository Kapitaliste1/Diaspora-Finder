<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="230dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/header"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">


        <ImageView
             android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
             android:scaleType="centerCrop"
            android:id="@+id/coverDrawer"
            android:src="@drawable/tum"
              />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:gravity="left|center"

            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10sp"
                >
                <com.github.siyamed.shapeimageview.CircularImageView
                    android:id="@+id/profilDrawer"
                    android:layout_width="100sp"
                    android:layout_height="70sp"
                    android:src="@android:drawable/sym_def_app_icon"
                    app:siBorderWidth="1dp"
                    app:siBorderColor="#5EFF00"

                    />


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="10sp"
                    android:layout_gravity="center|right"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Large Text"
                        android:id="@+id/nameDrawer"
                        android:layout_marginTop="20sp"
                        />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="From LA"
                        android:id="@+id/countryDrawer"
                        />

                </LinearLayout>


            </LinearLayout>

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp4"
                android:layout_marginBottom="@dimen/dp4"
                android:layout_marginLeft="10sp"
                >
                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left">
                            <TableLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp4"
                                android:layout_marginBottom="@dimen/dp4">
                                <TableRow
                                    android:layout_width="fill_parent"
                                    android:layout_height="@dimen/dp48"
                                    android:gravity="left">

                                      <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="15 Followers"
                                        android:layout_marginTop="8sp"
                                        android:layout_marginRight="15sp"
                                        android:id="@+id/followersProfil"
                                          android:textAppearance="?android:attr/textAppearanceMedium"
                                        />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="10 Following"
                                        android:layout_marginRight="15sp"
                                        android:layout_marginTop="8sp"
                                        android:id="@+id/followingProfil"
                                        android:textAppearance="?android:attr/textAppearanceMedium"

                                        />
                                    </TableRow>
                            </TableLayout>




                    </TableRow>




            </TableLayout>
        </LinearLayout>


</RelativeLayout>
