<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.esprit.diasporafinder.fragments.UpdatePostFragment">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="top"
        android:layout_margin="5sp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="24dp"
        android:elevation="25dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Edit Post"
                android:gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="30sp"
                android:layout_marginTop="10sp"
                />

             <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_marginTop="10dp"
                android:layout_width="fill_parent"
                android:layout_height="350sp"
                card_view:cardCornerRadius="10dp"
                android:elevation="150dp"
                >
                <ImageView
                     android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:src="@drawable/sea"
                    android:padding="10sp"
                    android:id="@+id/imagePostEdit"
                    />
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:maxHeight="80dp"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:id="@+id/popularityDetails"
                android:orientation="horizontal"
                >
                <Button
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:id="@+id/uploadPhoto"
                    android:layout_gravity="right"
                    android:layout_marginTop="@dimen/dp4"
                    android:textSize="@dimen/text_medium"
                    android:background="@drawable/ic_add_a_photo_black_48dp"
                    android:layout_marginRight="20sp"
                    android:height="@dimen/dp40"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="_"
                android:background="#4a8148"
                />
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:minHeight="50sp"
                android:background="@color/common_google_signin_btn_text_dark_default"
                android:shadowRadius="@integer/google_play_services_version"
                android:id="@+id/editContentPost"
                />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="_"
                android:background="#4a8148"
                />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingBottom="10sp"
                android:paddingTop="10sp"
                >

                <Button
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:layout_marginRight="20sp"
                    android:id="@+id/deletePost"
                    android:background="@drawable/ic_delete_forever_black_48dp"/>
                <Button
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:layout_marginRight="20sp"
                    android:id="@+id/saveChangedPost"
                    android:background="@drawable/ic_vertical_align_bottom_black_48dp"/>

            </LinearLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>

</ScrollView>
